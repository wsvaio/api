{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,

		"baseUrl": "./",
		"paths": {
			"@wsvaio/api": ["src/index.ts"],
			"@/*": ["playground/*"]
		},

    "types": ["@dcloudio/types"]
	},
	"exclude": ["node_modules"]
}
